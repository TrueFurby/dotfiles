# aliases

alias rm='rm -vi'
alias cp='cp -vi'
alias mv='mv -vi'
alias grep='grep -s  --color --exclude-dir={.bzr,CVS,.git,.hg,.svn}'
alias tail='tail -n 30'
alias ls='ls --color'

alias l='ls -1B --group-directories-first'
alias la='ls -lhA'
alias lb='ls -lhAB'
alias install='sudo apt-get install -y'
alias purge='sudo apt-get purge -y'
alias wgeto='wget -q -O -'
alias fuck='sudo $(history -p \!\!)'
alias syslog='cat /var/log/syslog'
alias cutcol='cut -c1-$COLUMNS'

alias gog='go get -v -u'
alias gob='go build -v'
alias box='dropbox'
alias snmpget='snmpget -v 2c -c public'
alias snmpset='snmpget -v 2c -c public'
alias termbin='nc termbin.com 9999'

